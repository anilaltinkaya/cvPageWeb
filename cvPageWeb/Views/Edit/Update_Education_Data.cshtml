@model cvPageWeb.Models.Entity.TBL_EDUCATION

@{
    ViewBag.Title = "Update_Education_Data";
}






<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
    <link rel="icon" href="~/Content/img/icon.jpg" type="image/x-icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link href="~/Content/css/edit_style.css" rel="stylesheet" />




</head>
<body>


    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            &nbsp;
            
            <div class="col-md-12 border-right">
                <div class="p-3 py-5">

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <a href="javascript:history.back()" class="btn btn-primary profile-button">Geri</a>
                            <hr />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Eğitim Bilgisi Güncelleme</h4>
                    </div>
                    @using (Html.BeginForm("Update_Education_Data", "Edit", FormMethod.Post))
                    {
                        DateTime education_start_date = Convert.ToDateTime(Model.education_start_date);
                        DateTime education_finish_date = Convert.ToDateTime(Model.education_finish_date);

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Bölüm</label><input type="text" class="form-control" placeholder="Örn:Mekatronik Mühendisliği" value="@Model.department" name="department" maxlength="25"></div>
                            <div class="col-md-4"><label class="labels">Okul Adı</label><input type="text" class="form-control" placeholder="Örn:Erciyes Üniversitesi" value="@Model.school" name="school" maxlength="40"></div>
                            <div class="col-md-4"><label class="labels">Öğrenim Dili</label><input type="text" class="form-control" placeholder="Örn:İngilizce" value="@Model.lang" name="lang" maxlength="15"></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Not Ortalaması</label><input type="number" class="form-control" step="0.01" placeholder="3.42" value="@Model.gpa" name="gpa"></div>
                            <div class="col-md-4"><label class="labels">Tam Not</label><input type="number" class="form-control" placeholder="4" value="@Model.gpa_full" name="gpa_full" maxlength="4"></div>
                            <div class="col-md-4">
                                <input type="hidden" value="@Model.gpa_visible" id="gpa_visible_value" />

                                <label class="labels">Not Ortalaması Görünürlük</label><select class="form-control" name="gpa_visible" id="gpa_visible">
                                    <option value="visible">Göster</option>
                                    <option value="hidden">Gizle</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Başlangıç Tarihi</label><input type="date" class="form-control" id="education_start_date" name="education_start_date" value="@education_start_date.Year-@education_start_date.Month.ToString().PadLeft(2,'0')-@education_start_date.Day.ToString().PadLeft(2,'0')"></div>
                            <div class="col-md-4"><label class="labels">Bitiş Tarihi</label><input type="date" class="form-control" id="education_finish_date" name="education_finish_date" value="@education_finish_date.Year-@education_finish_date.Month.ToString().PadLeft(2,'0')-@education_finish_date.Day.ToString().PadLeft(2,'0')"></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">CV Üzerinde Görünüm Sıralaması</label><input type="number" class="form-control" placeholder="3" value="@Model.placement" name="placement"></div>

                            <div class="col-md-4">
                                <input type="hidden" value="@Model.visible" id="visible_value" />

                                <label class="labels">Eğitim Görünürlük</label><select class="form-control" name="visible" id="visible">
                                    <option value="visible">Göster</option>
                                    <option value="hidden">Gizle</option>
                                </select>
                            </div>
                        </div>
                        <input type="hidden" name="id" value="@Model.id" />
                        <input type="hidden" name="member_id" value="@Model.member_id" />
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Güncelle</button></div>
                    }
                </div>
            </div>
        </div>
    </div>
    @*İki tane div kapatılmadı.*@
</body>
</html>

<script>
    document.getElementById("visible").value = document.getElementById("visible_value").value;
    document.getElementById("gpa_visible").value = document.getElementById("gpa_visible_value").value;

</script>



