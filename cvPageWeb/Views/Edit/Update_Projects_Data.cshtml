@model cvPageWeb.Models.Entity.TBL_PROJECTS

@{
    ViewBag.Title = "Update_Project_Data";
}






<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
    <link rel="icon" href="~/Content/img/icon.jpg" type="image/x-icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link href="~/Content/css/edit_style.css" rel="stylesheet" />




</head>
<body>


    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            &nbsp;

            <div class="col-md-12 border-right">
                <div class="p-3 py-5">

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <a href="javascript:history.back()" class="btn btn-primary profile-button">Geri</a>
                            <hr />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Proje Bilgisi Güncelleme</h4>
                    </div>
                    @using (Html.BeginForm("Update_Projects_Data", "Edit", FormMethod.Post))
                    {
                        DateTime start_date = Convert.ToDateTime(Model.start_date);
                        DateTime finish_date = Convert.ToDateTime(Model.finish_date);


                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Proje Adı</label><input type="text" class="form-control" placeholder="Örn:Buzdolabı Üretim Hattı" value="@Model.projects_name" name="projects_name" maxlength="40" required></div>
                            <div class="col-md-4"><label class="labels">Projedeki Görev</label><input type="text" class="form-control" placeholder="Örn:Proje Yöneticisi" value="@Model.position" name="position" maxlength="40" required></div>
                            <div class="col-md-4"><label class="labels">Şirket Adı</label><input type="text" class="form-control" placeholder="Örn:Tesla Elektronik" value="@Model.company_name" name="company_name" maxlength="30" required></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Başlangıç Tarihi</label><input type="date" class="form-control" id="start_date" name="start_date" value="@start_date.Year-@start_date.Month.ToString().PadLeft(2,'0')-@start_date.Day.ToString().PadLeft(2,'0')" required></div>
                            <div class="col-md-4"><label class="labels">Bitiş Tarihi</label><input type="date" class="form-control" id="finish_date" name="finish_date" value="@finish_date.Year-@finish_date.Month.ToString().PadLeft(2,'0')-@finish_date.Day.ToString().PadLeft(2,'0')" required></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label class="labels">Açıklama</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" maxlength="300" placeholder="Geliştirilen Yetenekler:Proje Yönetimi,Solidworks,Shneider PLC" required>@Model.description</textarea>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">CV Üzerinde Görünüm Sıralaması</label><input type="number" class="form-control" placeholder="3" value="@Model.placement" name="placement" required></div>
                            <input type="hidden" value="@Model.visible" id="visible_value" />
                            <div class="col-md-4">
                                <label class="labels">Proje Görünürlük</label><select class="form-control" name="visible" id="visible">
                                    <option value="visible">Göster</option>
                                    <option value="hidden">Gizle</option>
                                </select>
                            </div>
                        </div>





                        <input type="hidden" name="id" value="@Model.id" />
                        <input type="hidden" name="member_id" value="@Model.member_id" />
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Güncelle</button></div>
                    }
                </div>
            </div>
        </div>
    </div>
    @*İki tane div kapatılmadı.*@
</body>
</html>

<script>
    document.getElementById("visible").value = document.getElementById("visible_value").value;

</script>



