@model cvPageWeb.Models.Entity.TBL_SINGULAR_INFO



@using (Html.BeginForm("Update_Header_Visibility_Lang_Data", "Edit", FormMethod.Get))
{
    @*<div class="row mt-3">
            <p style="color:green">@ViewBag.Mesaj</p>
        </div>*@


    <div class="row mt-3">
        <div class="col-md-4"><label class="labels">Yabancı Dil Başlık</label><input type="text" name="lang_head" class="form-control" placeholder="" value="@Model.lang_head" maxlength="20" required></div>

        <div class="col-md-4">
            <input type="hidden" value="@Model.lang_visible" id="lang_visible_value" />
            <label class="labels">Yabancı Dil Görünürlük</label><select class="form-control" name="lang_visible" id="lang_visible">
                <option value="visible">Göster</option>
                <option value="hidden">Gizle</option>
            </select>
        </div>

    </div>


    <input type="hidden" name="id" value="@Model.id" />
    <input type="hidden" name="member_id" value="@Model.member_id" />
    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Güncelle</button></div>
}


<script>
    document.getElementById("lang_visible").value = document.getElementById("lang_visible_value").value;
</script>

