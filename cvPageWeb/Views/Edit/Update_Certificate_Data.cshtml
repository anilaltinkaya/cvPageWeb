@model cvPageWeb.Models.Entity.TBL_CERTIFICATE
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
    <link rel="icon" href="~/Content/img/icon.jpg" type="image/x-icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link href="~/Content/css/edit_style.css" rel="stylesheet" />




</head>
<body>


    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            &nbsp;

            <div class="col-md-12 border-right">
                <div class="p-3 py-5">
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <a href="javascript:history.back()" class="btn btn-primary profile-button">Geri</a>
                            <hr />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Sertifika Bilgisi Güncelleme</h4>
                    </div>
                    @using (Html.BeginForm("Update_Certificate_Data", "Edit", FormMethod.Post))
                    {
                        DateTime date = Convert.ToDateTime(Model.date);


                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Sertifika Adı</label><input type="text" class="form-control" placeholder="" value="@Model.certificate_name" name="certificate_name" maxlength="100" required></div>
                            <div class="col-md-4"><label class="labels">Alınan Kaynak</label><input type="text" class="form-control" placeholder="" value="@Model.source" name="source" maxlength="15" required></div>
                            <div class="col-md-4"><label class="labels">Tarih</label><input type="date" class="form-control" id="date" name="date" value="@date.Year-@date.Month.ToString().PadLeft(2,'0')-@date.Day.ToString().PadLeft(2,'0')" required></div>

                        </div>


                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">CV Üzerinde Görünüm Sıralaması</label><input type="number" class="form-control" placeholder="3" value="@Model.placement" name="placement" required></div>
                            <input type="hidden" value="@Model.visible" id="visible_value" />
                            <div class="col-md-4">
                                <label class="labels">Sertifika Görünürlük</label><select class="form-control" name="visible" id="visible" required>
                                    <option value="visible">Göster</option>
                                    <option value="hidden">Gizle</option>
                                </select>
                            </div>
                        </div>





                        <input type="hidden" name="id" value="@Model.id" />
                        <input type="hidden" name="member_id" value="@Model.member_id" />
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Güncelle</button></div>
                    }
                </div>
            </div>
        </div>
    </div>
    @*İki tane div kapatılmadı.*@
</body>
</html>

<script>
    document.getElementById("visible").value = document.getElementById("visible_value").value;

</script>



