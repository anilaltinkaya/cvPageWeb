@model cvPageWeb.Models.Entity.TBL_EXPERIENCE

@{
    ViewBag.Title = "Update_Experience_Data";
}






<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
    <link rel="icon" href="~/Content/img/icon.jpg" type="image/x-icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link href="~/Content/css/edit_style.css" rel="stylesheet" />

</head>
<body>


    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            &nbsp;

            <div class="col-md-12 border-right">
                <div class="p-3 py-5">

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <a href="javascript:history.back()" class="btn btn-primary profile-button">Geri</a>
                            <hr />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Deneyim Bilgisi Güncelleme</h4>
                    </div>
                    @using (Html.BeginForm("Update_Experience_Data", "Edit", FormMethod.Post))
                    {
                        DateTime start_date = Convert.ToDateTime(Model.start_date);
                        DateTime finish_date = Convert.ToDateTime(Model.finish_date);

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Şirket Adı</label><input type="text" class="form-control" placeholder="Şirket adı giriniz." value="@Model.company_name" name="company_name" required maxlength="25" ></div>
                            <div class="col-md-4"><label class="labels">Ünvan</label><input type="text" class="form-control" placeholder="Ünvan giriniz." value="@Model.title" name="title" required maxlength="25" ></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Başlangıç Tarihi</label><input type="date" class="form-control" id="start_date" name="start_date" value="@start_date.Year-@start_date.Month.ToString().PadLeft(2,'0')-@start_date.Day.ToString().PadLeft(2,'0')" required></div>
                            <div class="col-md-4"><label class="labels">Bitiş Tarihi</label><input type="date" class="form-control" id="finish_date" name="finish_date" value="@finish_date.Year-@finish_date.Month.ToString().PadLeft(2,'0')-@finish_date.Day.ToString().PadLeft(2,'0')" required></div>
                        </div>

                        <div class="col-md-12 mt-3">
                            <label class="labels">Açıklama</label>
                            <textarea class="form-control" id="description" rows="3" name="description" maxlength="400" required>@Model.description</textarea>
                        </div>

                        <div class="row mt-3">
                            <input type="hidden" value="@Model.city" id="city_value" />
                            <input type="hidden" value="@Model.work_type" id="work_type_value" />

                            @Html.Action("City_List", "Edit")
                            @Html.Action("Work_Type_List", "Edit")
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">CV Üzerinde Görünüm Sıralaması</label><input type="number" class="form-control" placeholder="3" value="@Model.placement" name="placement" required></div>

                            <div class="col-md-4">
                                <input type="hidden" value="@Model.visible" id="visible_value" />

                                <label class="labels">Deneyim Görünürlük</label><select class="form-control" name="visible" id="visible">
                                    <option value="visible">Göster</option>
                                    <option value="hidden">Gizle</option>
                                </select>
                            </div>
                        </div>

                        <input type="hidden" name="member_id" value="@Model.member_id" />
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Güncelle</button></div>
                    }
                </div>
            </div>
        </div>
    </div>
    @*İki tane div kapatılmadı.*@
</body>
</html>

<script>
    document.getElementById("visible").value = document.getElementById("visible_value").value;
    document.getElementById("city").value = document.getElementById("city_value").value;
    document.getElementById("work_type").value = document.getElementById("work_type_value").value;

</script>



