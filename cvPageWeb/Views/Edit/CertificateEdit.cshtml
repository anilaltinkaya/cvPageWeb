
@{
    ViewBag.Title = "CertificateEdit";
    Layout = "~/Views/Shared/EditLayout.cshtml";
}





<div class="col-md-12 border-right">
    <div class="p-3 py-5">
        <div class="row mt-3">
            <div class="col-md-12">
                <a href="/Edit/AbilityEdit/@Model.member_id" class="btn btn-primary profile-button">Yetenek Bilgileri Düzenle</a>
                <hr />
            </div>
        </div>

        <br />


        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-right">Sertifika Bilgileriniz</h4>
        </div>

        @{
            string certification_visibility = "";

            if (Model.certification_visible == "visible")
            {
                certification_visibility = "Göster";
            }
            else
            {
                certification_visibility = "Gizle";
            }

        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6> <b>@Model.certification_head </b> (@certification_visibility)</h6>
        </div>
        <!-- Trigger/Open The Modal -->
        <button class="btn btn-primary profile-button ml-auto" id="myBtn"><i class="fa fa-pencil"></i></button>


        <!-- The Modal -->
        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
                <span class="close">&times;</span>
                @Html.Action("Header_Visibility_Certification_Data", "Edit", new { member_id = Model.member_id })
            </div>

        </div>



        @using (Html.BeginForm("Add_Certificate_Data", "Edit", FormMethod.Get))
        {

            <div class="row mt-3">
                <p style="color:green">@ViewBag.Mesaj</p>
            </div>



            <div class="row mt-2">
                @Html.Action("Certificate_Data", "Edit", new { member_id = Model.member_id })

            </div>
            <br />
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-right">Yeni Sertifika Bilgisi Ekle</h4>
            </div>
            <div class="row mt-3">
                <div class="col-md-4"><label class="labels">Sertifika Adı</label><input type="text" class="form-control" placeholder="" value="" name="certificate_name" maxlength="100" required></div>
                <div class="col-md-4"><label class="labels">Alınan Kaynak</label><input type="text" class="form-control" placeholder="" value="" name="source" maxlength="15" required></div>
                <div class="col-md-4"><label class="labels">Tarih</label><input type="date" class="form-control" id="date" name="date" required></div>

            </div>


            <div class="row mt-3">
                <div class="col-md-4"><label class="labels">CV Üzerinde Görünüm Sıralaması</label><input type="number" class="form-control" placeholder="3" value="" name="placement" required></div>

                <div class="col-md-4">
                    <label class="labels">Sertifika Görünürlük</label><select class="form-control" name="visible" id="visible" required>
                        <option value="visible">Göster</option>
                        <option value="hidden">Gizle</option>
                    </select>
                </div>
            </div>




            <input type="hidden" name="id" value="@Model.id" />
            <input type="hidden" name="member_id" value="@Model.member_id" />
            <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Ekle</button></div>
        }






    </div>
</div>

</div>
</div>
