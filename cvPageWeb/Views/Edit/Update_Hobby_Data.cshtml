@model cvPageWeb.Models.Entity.TBL_HOBBY
@{
    ViewBag.Title = "Update_Hobby_Data";
}





<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
    <link rel="icon" href="~/Content/img/icon.jpg" type="image/x-icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link href="~/Content/css/edit_style.css" rel="stylesheet" />




</head>
<body>


    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            &nbsp;

            <div class="col-md-12 border-right">
                <div class="p-3 py-5">

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <a href="javascript:history.back()" class="btn btn-primary profile-button">Geri</a>
                            <hr />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Hobi Bilgisi Güncelleme</h4>
                    </div>
                    @using (Html.BeginForm("Update_Hobby_Data", "Edit", FormMethod.Post))
                    {
                        <div class="row mt-3">

                            <div class="col-md-4"><label class="labels">Hobi</label><input type="text" class="form-control" value="@Model.hobby" name="hobby"></div>

                        </div>

                        <input type="hidden" name="member_id" value="@Model.member_id" />
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Kaydet</button></div>
                    }
                </div>
            </div>
        </div>
    </div>
    @*İki tane div kapatılmadı.*@
</body>
</html>





