@model cvPageWeb.Models.Entity.TBL_LANG
@{
    ViewBag.Title = "Update_Lang_Data";
}





<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
    <link rel="icon" href="~/Content/img/icon.jpg" type="image/x-icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link href="~/Content/css/edit_style.css" rel="stylesheet" />




</head>
<body>


    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            &nbsp;

            <div class="col-md-12 border-right">
                <div class="p-3 py-5">

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <a href="javascript:history.back()" class="btn btn-primary profile-button">Geri</a>
                            <hr />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Dil Bilgisi Güncelleme</h4>
                    </div>
                    @using (Html.BeginForm("Update_Lang_Data", "Edit", FormMethod.Post))
                    {
                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Yabancı Dil</label><input type="text" class="form-control" placeholder="Yabancı dil giriniz." value="@Model.lang" name="lang" maxlength="20" required></div>
                            <div class="col-md-4"><label class="labels">Kaynak</label><input type="text" class="form-control" placeholder="Örn:YDS" value="@Model.point_source" name="point_source" maxlength="15" required/></div>

                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Yabancı Dil Puan</label><input type="number" class="form-control" placeholder="Örn:70" step="0.01" value="@Model.point" name="point" maxlength="4" /></div>
                            <div class="col-md-4"><label class="labels">Tam Puan</label><input type="number" class="form-control" placeholder="Örn:100" step="0.01" value="@Model.point_full" name="point_full" maxlength="4" /></div>

                        </div>



                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Reading Puan</label><input type="text" class="form-control" placeholder="Örn:70" step="0.01" value="@Model.reading_point" name="reading_point" maxlength="4" /></div>
                            <div class="col-md-4"><label class="labels">Reading Tam Puan</label><input type="number" class="form-control" placeholder="Örn:100" step="0.01" value="@Model.reading_point_full" name="reading_point_full" maxlength="4" /></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Writing Puan</label><input type="text" class="form-control" placeholder="Örn:70" step="0.01" value="@Model.writing_point" name="writing_point" maxlength="4" /></div>
                            <div class="col-md-4"><label class="labels">Writing Tam Puan</label><input type="number" class="form-control" placeholder="Örn:100" step="0.01" value="@Model.writing_point_full" name="writing_point_full" maxlength="4" /></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">Speaking Puan</label><input type="text" class="form-control" placeholder="Örn:70" step="0.01" value="@Model.speaking_point" name="speaking_point" maxlength="4" /></div>
                            <div class="col-md-4"><label class="labels">Speaking Tam Puan</label><input type="number" class="form-control" placeholder="Örn:100" step="0.01" value="@Model.speaking_point_full" name="speaking_point_full" maxlength="4" /></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4">
                                <input type="hidden" value="@Model.point_visible" id="point_visible_value" />
                                <label class="labels">Puan Görünürlük</label><select class="form-control" name="point_visible" id="point_visible" required>
                                    <option value="visible">Göster</option>
                                    <option value="hidden">Gizle</option>
                                </select>
                            </div>

                            <input type="hidden" value="@Model.rws_visible" id="rws_visible_value" />
                            <div class="col-md-4">
                                <label class="labels">Reading-Writing-Speaking Puan Görünürlük</label><select class="form-control" name="rws_visible" id="rws_visible" required>
                                    <option value="visible">Göster</option>
                                    <option value="hidden">Gizle</option>
                                </select>
                            </div>



                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4"><label class="labels">CV Üzerinde Görünüm Sıralaması</label><input type="number" class="form-control" placeholder="3" value="@Model.placement" name="placement" required></div>

                            <input type="hidden" value="@Model.visible" id="visible_value" />

                            <div class="col-md-4">
                                <label class="labels">Yabancı Dil Bilgisi Görünürlük</label><select class="form-control" name="visible" id="visible" required>
                                    <option value="visible">Göster</option>
                                    <option value="hidden">Gizle</option>
                                </select>
                            </div>
                        </div>

                        <input type="hidden" name="member_id" value="@Model.member_id" />
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Güncelle</button></div>
                    }
                </div>
            </div>
        </div>
    </div>
    @*İki tane div kapatılmadı.*@
</body>
</html>

<script>
    document.getElementById("point_visible").value = document.getElementById("point_visible_value").value;
    document.getElementById("rws_visible").value = document.getElementById("rws_visible_value").value;
    document.getElementById("visible").value = document.getElementById("visible_value").value;

</script>



